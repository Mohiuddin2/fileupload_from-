<% layout('layouts/boilerplate') %>

    <div style="background-color: rgb(13, 171, 182) ; margin: auto;
border: 3px solid green;
padding: 0px;" class="col-lg-8 col-xs-12 col-centered rounded mb-2">

        <div class="p-2 text-dark">
            <h4 class="mt-2">Application of
                <%= applicant.first_name %>
            </h4>

            <div class="">
                <div class="form-row">
                    <div class="form-group bg-light rounded p-2">
                        <h6><b> Name :</b></h6>
                        <%= applicant.first_name %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Last Name:</b></h6>
                        <%= applicant.last_name %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Gender :</b></h6>
                        <%= applicant.gender %>

                    </div>

                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Mobile Phone :</b></h6>

                        <%= applicant.mobile_phone %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Email :</b></h6>
                        <%= applicant.email %>
                    </div>
                </div>
            </div>

            <h4 class="pl-2 mt-2">Profile Details</h4>
            <div class="submit-section">
                <div class="form-row">
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Mother Name :</b></h6>
                        <%= applicant.mother_name %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Father Name :</b></h6>
                        <%= applicant.father_name %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Birth Date :</b></h6>
                        <%= applicant.birth_date %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Country of birth :</b></h6>
                        <%= applicant.country_of_birth %>

                            <img src="/country/flag-of-<%= applicant.country_of_birth %>.png" height="50px" width="50px"
                                title="<%= applicant.country_of_birth %>" class="rounded" />



                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Nationality :</b></h6>
                        <%= applicant.nationality %>

                            <img src="/country/flag-of-<%= applicant.nationality %>.png" class="rounded mr-2"
                                height="50px" width="50px" title="<%= applicant.nationality %>" />


                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>City of residence :</b></h6>
                        <%= applicant.city_of_residence %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Whatsapp Number :</b></h6>
                        <%= applicant.whatsapp_number %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Address :</b></h6>
                        <%= applicant.address %>
                    </div>
                </div>
            </div>

            <h4 class="pl-2 mt-2">Passport Information :</b></h4>
            <div class="submit-section">
                <div class="form-row">
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Passport date of issue :</b></h6>
                        <%= applicant.passport_date_of_issue %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Passport Number :</b></h6>
                        <%= applicant.passport_number %>
                    </div>
                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Passport date of expire :</b></h6>
                        <%= applicant.passport_date_of_expire %>
                    </div>
                </div>
            </div>


            <div class="submit-section">


                <div class="form-row">

                    <div class="form-group bg-light mt-1 rounded p-2">
                        <h6><b>Passport date of issue :</b></h6>
                        <%= applicant.passport_date_of_issue %>
                    </div>

                    <div class="form-group col-md-6 mt-1 rounded p-2">
                        <h6><b>Applicant Image</b></h6>
                        <img class="rounded" src=<%=applicant.profile_picture[0].imageUrl %> alt="...">

                    </div>
                    <div class="form-group col-md-6 mt-1 rounded p-2">
                        <h6><b>Passport :</b></h6>
                        <img class="rounded" src=<%=applicant.passport[0].imageUrl %> alt="...">

                    </div>
                    <div class="form-group col-md-6 mt-1 rounded p-2">
                        <h6><b>Diploma :</b></h6>
                        <img class="rounded" src=<%=applicant.diploma[0].imageUrl %> alt="...">
                    </div>
                    <div class="form-group col-md-6 mt-1 rounded p-2">
                        <h6><b>Transcript :</b></h6>
                        <img class="rounded" src=<%=applicant.transcript[0].imageUrl %> alt="...">

                    </div>

                </div>
            </div>



        </div>

    </div>

    </div>


    <% if( approvedStatus==="notDecided" ) { %>
        <h6 class="m-2 bg-info rounded">
            <table cellpadding="0" cellspacing="0" class="m-2">
                <tr>
                    <td>
                        <form action="/application/approve/<%= applicant.id %>" method="post"
                            style="padding: 0; margin: 0">

                            <input type="hidden" name="status1" value="Approved">
                            <button class="btn btn-success">Approved!</button>
                        </form>
                    </td>
                    <td>


                        <form action="/application/approve/<%= applicant.id %> " method="post"
                            style="padding: 0; margin: 0">
                            <input type="hidden" name="status2" value="Rejected">
                            <button class="btn btn-danger m-2">Reject</button>


                        </form>
                    </td>
                </tr>

            </table>

        </h6>

        <% } else {%>
            <h2 class="text-success bg-light rounded">
                <% if( approvedStatus.status1==="Approved" ){%>
                    <%= approvedStatus.status1 %>
                        <%} else {%>
                            <%= approvedStatus.status2 %>
                                <%} %>
            </h2>
            <% } %>